@import './normalize.css'
@require './font'
@import './variables'

body
  background: $screenBg
  color: $screenText
  font: 12px/1.3 Arial
  font-size: 12px
  line-height: 1.3
  width: 683px
p
  margin: 0
  padding: 0

table, td
  border: 1px solid $borderColor
table
  width: 100%
  table-layout: fixed
tr
  width: 683px
td
  padding: 0
  position: relative

label
  position: absolute
  top: 4px
  left: 4px
  font: 12px 'Segoe Script', 'Segoe Print', script
  transform: scale(0.85)
  transform-origin: top left
  color: #929292
  line-height: 1

button
  display: inline-block
  color: black
  border: 1px solid black
  border-radius: 2px
  height: 21px
  line-height: 17px
  background: linear-gradient(0deg, rgb(222,222,222) 0%, rgb(246,246,246) 100%)
  cursor: pointer
  &[disabled]
    color: #999
    border-color: #999
    cursor: not-allowed
.actions
  text-align: center
  padding: 8px 0

.intro
  margin: 6px 16px

.textarea
  font-family: monospace
  white-space: pre-wrap
  word-break: break-word
  font-size: 12px
  min-height: 12px*4
  b
    font-weight: normal
    color: $wrongText
  b.space
    background: $wrongText
  i
    font-style: normal
    color: $hintText
  &.focused
    .cursor
      background: $screenBg
      color: $screenText
      animation: 1s blink step-end infinite

// section win
.section-win
  text-align: center
  td
    padding: 16px 16px 0
  h1
    font-size: 36px
    line-height: 1
    padding: 0
    margin: 0
#textarea-win
  font-size: 24px
  &.is-expanded
    text-align: left

// section billboard
#section-billboard
  background: #d1d1d1
  border-bottom: 1px solid $borderColor
  height: 21px
  line-height: @height
  overflow: hidden
  white-space: nowrap
  padding: 0 4px
  p
    margin-left: 40px
    display: inline

// section lose
.section-lose-inner
  padding-top: 14px
  position: relative
#textarea-lose
  padding: 6px 8px
  border: 1px solid $borderColor
  margin: 0 16px
  font-size: 13px

.section-lose-comment
  .comment
    padding: 20px 10px 4px
    position: relative
    & + .comment
      border-top: 1px solid $borderColor

@keyframes marquee
  from { transform: translateX(0%) }
  to { transform: translateX(-100%) }

@keyframes blink
  from, to
    background: $screenText
    color: $screenBg
  50%
    background: $screenBg
    color: $hintText